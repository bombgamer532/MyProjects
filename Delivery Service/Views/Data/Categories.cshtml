@model InfoSystem.Models.TableModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tables</title>
    <link href="~/styles.css" rel="stylesheet" />
    <script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
</head>
<body>
    <h1>Категорії</h1>
    <div>
        <form action="/Data/Table2" method="post">
            <div class="form-group">
                <label for="select">Стовпець:</label>
                <select asp-for="Column" asp-items="Model.Options"></select>
            </div>
            <div class="form-group">
                <label asp-for="Value">Значення:</label>
                <input type="text" name="value" class="form-control" />
            </div>
            <button class="btn btn-primary" type="submit">Знайти</button>
        </form>
    </div>
    <table class="sortable">
        <tr>
            <th>ID</th>
            <th>Назва</th>
        </tr>
        @foreach (var item in Model.Data)
        {
            <tr class="item">
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }
    </table>
</body>
</html>
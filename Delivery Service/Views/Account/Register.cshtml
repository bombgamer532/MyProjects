@model InfoSystem.Models.RegisterModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <!--<link href="~/styles.css" rel="stylesheet" />-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        .input-validation-error {
            border-color: red;
        }
    </style>
</head>
<body class="card-body">
    <h1>Реєстрація</h1>
    <div>
        <form action="/Account/Register" method="post">
            <div class="form-group">
                <label asp-for="Login">Логін:</label>
                <input type="text" name="login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль:</label>
                <input type="text" name="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordRepeat">Повторити пароль:</label>
                <input type="text" name="passwordrepeat" class="form-control" />
                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone">Телефон:</label>
                <input type="text" name="phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Зареєструватися</button>
        </form>
    </div>
</body>
</html>